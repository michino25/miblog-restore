<div class="post-page container">
    <div class="post-wrapper">
        <span class="post-breadcrum">mi post > {{post.slug}}</span>
        <h1 class="post-title">{{post.title}}</h1>
        <span class="post-author">{{post.author}}</span>
        <span class="post-date">{{post.date}}</span>
        <span class="post-voter">{{post.voter}}</span>
        <div class="post-img-wrapper">
            <img src="{{post.image}}" class="post-img">
        </div>
        <p class="post-body">{{post.body}}</p>
    </div>
</div>

<style>
    .post-page {
        display: flex;
        align-items: center;
        flex-direction: column;
    }

    .post-wrapper {
        width: 700px;
    }


    .post-img-wrapper {
        overflow: hidden;
        position: relative;
        padding-top: 65%;
    }

    .post-img {
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .post-body {
        font-family: 'Times New Roman', Times, serif;
        font-size: 1.25rem;
    }
</style>